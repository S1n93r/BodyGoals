<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".ui.fragments.Overview">

    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:textSize="22sp"
        android:textAlignment="viewStart" />

    <ImageView
        android:id="@+id/button_edit"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:src="@drawable/ic_pencil"
        android:contentDescription="@string/button_disable_delete_description" />

    <ImageView
        android:id="@+id/button_delete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:src="@drawable/ic_bin"
        android:contentDescription="@string/button_disable_delete_description"
        android:layout_marginStart="8dp" />

    <ImageView
        android:id="@+id/button_confirm_delete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:src="@drawable/ic_check"
        android:contentDescription="@string/button_disable_delete_description"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/button_cancel_delete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:src="@drawable/ic_cancel_2"
        android:contentDescription="@string/button_disable_delete_description"
        android:visibility="gone"
        android:layout_marginStart="8dp" />

</LinearLayout>