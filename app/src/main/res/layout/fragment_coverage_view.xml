<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.WeeklyLog">

    <ImageButton
        android:id="@+id/button_head"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/body_part_oval"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_chest"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/body_part_oval"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_head" />

    <ImageButton
        android:id="@+id/button_core"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_marginTop="-64dp"
        android:background="@drawable/body_part_oval"
        android:translationZ="-1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_chest" />

    <ImageButton
        android:id="@+id/button_shoulder_left"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="-8dp"
        android:background="@drawable/body_part_oval"
        android:translationZ="-1dp"
        app:layout_constraintEnd_toStartOf="@+id/button_chest"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_arm_left"
        android:layout_width="40dp"
        android:layout_height="56dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/body_part_oval"
        android:rotation="4"
        app:layout_constraintEnd_toStartOf="@+id/button_chest"
        app:layout_constraintTop_toBottomOf="@+id/button_shoulder_left" />

    <ImageButton
        android:id="@+id/button_forearm_left"
        android:layout_width="40dp"
        android:layout_height="72dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/body_part_oval"
        app:layout_constraintEnd_toStartOf="@+id/button_chest"
        app:layout_constraintTop_toBottomOf="@+id/button_arm_left" />

    <ImageButton
        android:id="@+id/button_shoulder_right"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/body_part_oval"
        android:translationZ="-1dp"
        app:layout_constraintStart_toEndOf="@+id/button_chest"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_arm_right"
        android:layout_width="40dp"
        android:layout_height="56dp"
        android:background="@drawable/body_part_oval"
        android:rotation="-4"
        app:layout_constraintStart_toEndOf="@+id/button_chest"
        app:layout_constraintTop_toBottomOf="@+id/button_shoulder_right" />

    <ImageButton
        android:id="@+id/button_forearm_right"
        android:layout_width="40dp"
        android:layout_height="72dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/body_part_oval"
        app:layout_constraintStart_toEndOf="@+id/button_chest"
        app:layout_constraintTop_toBottomOf="@+id/button_arm_right" />

    <ImageButton
        android:id="@+id/button_leg_left"
        android:layout_width="48dp"
        android:layout_height="120dp"
        android:layout_marginTop="-8dp"
        android:background="@drawable/body_part_oval"
        android:rotation="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_core" />

    <ImageButton
        android:id="@+id/button_calf_left"
        android:layout_width="40dp"
        android:layout_height="120dp"
        android:layout_marginTop="-4dp"
        android:background="@drawable/body_part_oval"
        android:rotation="4"
        android:translationZ="-1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.408"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_leg_left" />

    <ImageButton
        android:id="@+id/button_leg_right"
        android:layout_width="48dp"
        android:layout_height="120dp"
        android:layout_marginTop="-8dp"
        android:background="@drawable/body_part_oval"
        android:rotation="-4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.572"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_core" />

    <ImageButton
        android:id="@+id/button_calf_right"
        android:layout_width="40dp"
        android:layout_height="120dp"
        android:layout_marginTop="-4dp"
        android:background="@drawable/body_part_oval"
        android:rotation="-4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_leg_left" />

    <Button
        android:id="@+id/button_to_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/button_overview"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>