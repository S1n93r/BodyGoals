<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/button_previous_week"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:text="@string/previous_week"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toStartOf="@+id/calendar_week_Text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_previous_week"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calendar_week_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/calendar_week_place_holder"
        app:layout_constraintEnd_toStartOf="@+id/button_next_week"
        app:layout_constraintStart_toEndOf="@+id/button_previous_week"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calendar_week_year_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calendar_week_year_place_holder"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar_week_Text" />

    <View
        android:id="@+id/view"
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toStartOf="@+id/button_next_week"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/calendar_week_Text"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_next_week"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:text="@string/next_week"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>