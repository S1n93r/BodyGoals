<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.YearlySummary">

    <com.slinger.bodygoals.ui.components.SwitchYearComponent
        android:id="@+id/switchYearComponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_to_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/button_overview"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchYearComponent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_bright"
                android:text="@string/january_short"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_dark"
                android:text="@string/february_short"
                android:textAlignment="center"
                android:textColor="@color/calendar_dark_tile_text"
                android:textSize="24sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_bright"
                android:text="@string/march_short"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_dark"
                android:text="@string/april_short"
                android:textAlignment="center"
                android:textColor="@color/calendar_dark_tile_text"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/progress_jan"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_dark"
                android:textAlignment="center"
                android:textColor="@color/calendar_dark_tile_text"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/progress_feb"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_bright"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/progress_mar"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_dark"
                android:textAlignment="center"
                android:textColor="@color/calendar_dark_tile_text"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/progress_apr"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_bright"
                android:textAlignment="center"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_bright"
                android:text="@string/may_short"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_dark"
                android:text="@string/june_short"
                android:textAlignment="center"
                android:textColor="@color/calendar_dark_tile_text"
                android:textSize="24sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_bright"
                android:text="@string/july_short"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_dark"
                android:text="@string/august_short"
                android:textAlignment="center"
                android:textColor="@color/calendar_dark_tile_text"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/progress_may"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_dark"
                android:textAlignment="center"
                android:textColor="@color/calendar_dark_tile_text"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/progress_jun"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_bright"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/progress_jul"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_dark"
                android:textAlignment="center"
                android:textColor="@color/calendar_dark_tile_text"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/progress_aug"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_bright"
                android:textAlignment="center"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_bright"
                android:text="@string/september_short"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_dark"
                android:text="@string/october_short"
                android:textAlignment="center"
                android:textColor="@color/calendar_dark_tile_text"
                android:textSize="24sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_bright"
                android:text="@string/november_short"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_dark"
                android:text="@string/december_short"
                android:textAlignment="center"
                android:textColor="@color/calendar_dark_tile_text"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/progress_sep"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_dark"
                android:textAlignment="center"
                android:textColor="@color/calendar_dark_tile_text"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/progress_oct"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_bright"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/progress_nov"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_dark"
                android:textAlignment="center"
                android:textColor="@color/calendar_dark_tile_text"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/progress_dec"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/calendar_tile_bright"
                android:textAlignment="center"
                android:textSize="24sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/overall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/percent_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:textAlignment="center"
        android:textSize="24sp" />

</androidx.constraintlayout.widget.ConstraintLayout>